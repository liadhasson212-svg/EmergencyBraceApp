<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/topLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Buttons"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/myFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/topLbl">

        <TextView
            android:id="@+id/contactLbl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Emergency Contact 1 :"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
        <EditText
            android:id="@+id/emergencyNum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:maxLines="1"
            android:text="054-XXXYYYY"
            android:tooltipText="Phone number only"
            android:inputType="phone"/>

        <TextView
            android:id="@+id/contactLbl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Emergency Contact 2 :"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
        <EditText
            android:id="@+id/emergencyNum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:maxLines="1"
            android:text="054-XXXYYYY"
            android:tooltipText="Phone number only"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/large_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="5"
            android:textSize="20sp"
            android:text="Help !!!
            , I fell down please call Mada now and come to my house"
            android:hint="Enter your large text here..."
            android:gravity="top"
            android:scrollbars="vertical"
            android:layout_margin="16dp"/>
        <Button
            android:id="@+id/saveContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שמור אנשי קשר"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <Button
            android:id="@+id/triggerFall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="דמה נפילה מהצמיד"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
    </LinearLayout>


